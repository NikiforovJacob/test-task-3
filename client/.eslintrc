{
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true
    },
    "extends": ["airbnb"],
    "rules": {
      "import/extensions": ["error", "never", { "jsx": "never"}],
      "jsx-a11y/label-has-for": [ 2, {
        "components": [ "Label" ],
        "required": "id",
        "allowChildren": false
      }],
      "react/no-did-update-set-state": [0],
      "react/prop-types": [0],
      "react/jsx-props-no-spreading": [0, {
        "html": "ignore",
        "custom": "ignore",
        "explicitSpread": "ignore",
        "exceptions": ["Image", "img"]
      }],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "no-console": "off",
      "comma-dangle": ["error", "always-multiline"]
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    }
  }